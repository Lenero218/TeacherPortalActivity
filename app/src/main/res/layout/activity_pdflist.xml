<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mCardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/semester_background">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include layout="@layout/app_bar"
            android:id="@+id/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/Principalpdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@drawable/round_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">


        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/report" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sstimg"
            android:ellipsize="marquee"
            android:fontFamily="@font/twcenmtstdmedium"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/_2sdp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Principal Report"
            android:textColor="@color/textcolour"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/teacherpdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Principalpdf"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/round_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">


        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/teacher_report" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sstimg"
            android:ellipsize="marquee"
            android:fontFamily="@font/twcenmtstdmedium"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/_2sdp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Teacher Report"
            android:textColor="@color/textcolour"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>
</RelativeLayout>