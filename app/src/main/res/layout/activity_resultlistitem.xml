<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/imgbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="4">

         <!--   <TextView
                android:id="@+id/grade_col"
                android:layout_column="0"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/edit_border"
                android:fontFamily="@font/seguisb_0"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:singleLine="true"
                android:text="Subject"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />-->

            <TextView
                  android:id="@+id/subject_col"
                android:layout_column="0"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/edit_border"
                android:fontFamily="@font/seguisb_0"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Subject"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/lessons_col"
                android:layout_column="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/edit_border"
                android:fontFamily="@font/seguisb_0"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Lessons"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/period_col"
                android:layout_column="2"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/edit_border"
                android:fontFamily="@font/seguisb_0"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Periods"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


                      <TextView
                android:id="@+id/activity_col"
                android:layout_column="3"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/edit_border"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/seguisb_0"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Activity Completed"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


        </TableRow>

        <ImageButton
            android:id="@+id/addbtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/add" />
    </LinearLayout>


    <!--    <View-->
    <!--        android:layout_height="3dip"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:background="@color/grey_for_background"/>-->
</LinearLayout>

